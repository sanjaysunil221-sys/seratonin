<script>
const noBtn = document.getElementById("no");
let size = 22;

// Floating hearts
setInterval(() => {
const heart = document.createElement("div");
heart.className = "heart";
heart.innerHTML = "ðŸ’œ";
heart.style.left = Math.random() * window.innerWidth + "px";
heart.style.fontSize = (20 + Math.random() * 20) + "px";
document.body.appendChild(heart);
setTimeout(() => heart.remove(), 6000);
}, 300);

function moveButton() {
const x = Math.random() * (window.innerWidth - 100);
const y = Math.random() * (window.innerHeight - 50);
noBtn.style.left = x + "px";
noBtn.style.top = y + "px";

size -= 2;
if (size > 8) {
noBtn.style.fontSize = size + "px";
noBtn.style.padding = "8px 12px";
}
}

noBtn.addEventListener("mouseover", moveButton);
noBtn.addEventListener("touchstart", moveButton);

function elegantHearts() {
const heart = document.createElement("div");
heart.innerHTML = "ðŸ’œ";
heart.style.position = "absolute";
heart.style.left = Math.random() * window.innerWidth + "px";
heart.style.top = window.innerHeight + "px";
heart.style.fontSize = "26px";
heart.style.opacity = "0.8";
heart.style.transition = "transform 6s linear, opacity 6s linear";
document.body.appendChild(heart);

setTimeout(() => {
heart.style.transform = "translateY(-120vh)";
heart.style.opacity = "0";
}, 10);

setTimeout(() => heart.remove(), 6000);
}

function yesClicked() {
document.body.innerHTML = `
<h1 class="fade-in glow" style="font-size:45px;margin-top:120px;">
YAY ðŸ’œ You made me the happiest person alive!
</h1>
<h2 class="fade-in" style="animation-delay:1s;">
I adore you forever ðŸ’ž
</h2>
`;

setInterval(elegantHearts, 400);
}
</script>

